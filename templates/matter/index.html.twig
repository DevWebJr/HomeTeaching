{% extends 'layouts/base.html.twig' %}

{% block title 'Matters | ' ~ parent() %}

{% block body %}
    <h1>Matter index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for matter in matters %}
            <tr>
                <td>{{ matter.id }}</td>
                <td>{{ matter.title }}</td>
                <td>{{ matter.description }}</td>
                <td>
                    <a href="{{ path('matter_show', {'id': matter.id}) }}">show</a>
                    <a href="{{ path('matter_edit', {'id': matter.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('matter_new') }}">Create new</a>
{% endblock %}
