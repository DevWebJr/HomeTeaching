{% extends 'layouts/base.html.twig' %}

{% block title ' ' ~ matter.getTitle() ~ ' | ' ~ parent() %}

{% block body %}
    <h1>Matter</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ matter.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ matter.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ matter.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('matter_index') }}">back to list</a>

    <a href="{{ path('matter_edit', {'id': matter.id}) }}">edit</a>

    {{ include('matter/_delete_form.html.twig') }}
{% endblock %}
