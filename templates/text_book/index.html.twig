<!DOCTYPE html>

<title>TextBook index</title>

{% block body %}
    <h1>TextBook index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for text_book in text_books %}
            <tr>
                <td>{{ text_book.id }}</td>
                <td>{{ text_book.title }}</td>
                <td>{{ text_book.description }}</td>
                <td>
                    <a href="{{ path('text_book_show', {'id': text_book.id}) }}">show</a>
                    <a href="{{ path('text_book_edit', {'id': text_book.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('text_book_new') }}">Create new</a>
{% endblock %}
